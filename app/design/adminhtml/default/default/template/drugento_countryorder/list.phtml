/**
 * Template for Mage_Adminhtml_Block_Catalog_Product_Edit
 */
?>
<?php $_countries = $this->getCountries(); ?>
<div class="content-header">
    <h3 class="icon-head "><?php echo $this->getHeader() ?></h3>
    <p class="content-buttons form-buttons">
        <?php echo $this->getSaveButtonHtml() ?>
    </p>
</div>
<form action="<?php echo $this->getSaveUrl() ?>" method="post" id="country_list_edit" enctype="multipart/form-data">
    <?php echo $this->getBlockHtml('formkey')?>
    <div style="display:none"></div>
    <ul id="country-list">
        <?php foreach($_countries as $_country): ?>
        <li id="item_<?php echo $_country->getId() ?>"><?php echo $_country->getName() ?></li>
        <?php endforeach; ?>
    </ul>
</form>
<script type="text/javascript">
//<![CDATA[

Event.observe(window, 'load', function() {
    Sortable.create('country-list');
});

function saveOrder() {
    var elem = document.createElement('input');
    elem.type = 'hidden';
    elem.name = 'country_ordered';
    elem.value = Sortable.serialize('country-list');

    document.getElementById('country_list_edit').append(elem);
    $('country_list_edit').submit();
}

//]]>
</script>
